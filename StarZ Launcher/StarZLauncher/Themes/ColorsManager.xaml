<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#ccd0d1" />
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#f6f8fa" />
    <SolidColorBrush x:Key="TextColor" Color="#242c35" />
    <SolidColorBrush x:Key="IconColor" Color="#72767C" />
    <SolidColorBrush x:Key="ProgressBarColor" Color="#72767C" />

    <LinearGradientBrush x:Key="AccentColorGradientBrush" StartPoint="0.5,0" EndPoint="0.5,1" SpreadMethod="Pad" MappingMode="RelativeToBoundingBox">
        <GradientStop Color="#FF0044EA" Offset="0.0" />
        <GradientStop Color="#FF0072B2" Offset="0.5" />
        <!-- Intermediate Color -->
        <GradientStop Color="#FF00C7ED" Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>