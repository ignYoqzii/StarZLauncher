<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- TextBlocks, Labels and TextBoxes Styles -->
    <Style x:Key="TextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource LightTextColor1}" />
    </Style>
    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource LightTextColor1}" />
    </Style>
    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource LightTextColor1}" />
    </Style>

    <!-- Borders Styles -->
    <Style x:Key="PrimaryBorder" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource LightMode1}" />
    </Style>
    <Style x:Key="SecondaryBorder" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource LightMode2}" />
    </Style>
    <Style x:Key="ProgressBarBorder" TargetType="Border">
        <Setter Property="Background" Value="#72767C" />
    </Style>

    <!-- StarZ Logo Style -->
    <Style x:Key="StarZLogo" TargetType="Image">
        <Setter Property="Source" Value="/Resources/StarZLogoDark.png" />
    </Style>

</ResourceDictionary>